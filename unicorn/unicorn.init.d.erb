#! /bin/sh

# File: /etc/init.d/unicorn

### BEGIN INIT INFO
# Provides:          unicorn
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts the unicorn web server
# Description:       starts unicorn
### END INIT INFO

RAILS_ENV=production
RAILS_ROOT=/www/lexim/current
RAILS_SHARED=/www/lexim/shared

set -u
set -e

sig () {
  test -s "$PID" && kill -$1 `cat "$PID"`
}

oldsig () {
  test -s "$OLD_PID" && kill -$1 `cat "$OLD_PID"`
}

cmd () {

case $1 in
  start)
    sig 0 && echo >&2 "Already running" && exit 0
    echo "Starting"
    $CMD
  ;;
  stop)
   sig QUIT && echo "Stopping" && exit 0
   echo >&2 "Not running"
  ;;
  force-stop)
    sig TERM && echo "Forcing a stop" && exit 0
    echo >&2 "Not running"
  ;;
  restart|reload)
    sig HUP && sleep 5 && oldsig QUIT && echo "Killing old master" `cat $OLD_PID` && exit 0
    echo >&2 "Couldn't reload, starting '$CMD' instead"
    $CMD
  ;;
  upgrade)
    sig USR2 && echo Upgraded && exit 0
    echo >&2 "Couldn't upgrade, starting '$CMD' instead"
    $CMD
  ;;
  rotate)
    sig USR1 && echo rotated logs OK && exit 0
    echo >&2 "Couldn't rotate logs" && exit 1
  ;;
  *)
    echo >&2 "Usage: $0 <start|stop|restart|upgrade|rotate|force-stop>"
    exit 1
  ;;
  esac
}

setup () {
  echo -n "$RAILS_ROOT: "
  cd $RAILS_ROOT || exit 1
  export PID=$RAILS_SHARED/pids/unicorn.pid
  export OLD_PID="$PID.oldbin"

  CMD="$RAILS_ROOT/bin/unicorn_rails --config-file config/unicorn.rb --env production --daemonize"
}

start_stop () {
  setup
  cmd $1
}

ARGS="$1"
start_stop $ARGS